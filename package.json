{
  "name": "focusflow-extension",
  "version": "1.0.0",
  "description": "A neurodiverse-friendly browser extension for distraction-free browsing",
  "main": "src/background/background.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "lint": "eslint src/",
    "test": "jest",
    "clean": "rimraf dist",
    "package": "npm run build && web-ext build --source-dir=dist --artifacts-dir=packages"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "web-ext": "^7.6.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "keywords": [
    "browser-extension",
    "accessibility",
    "neurodiverse",
    "adhd",
    "autism",
    "dyslexia",
    "focus",
    "distraction-blocker"
  ],
  "author": "FocusFlow Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/focusflow/focusflow-extension.git"
  },
  "bugs": {
    "url": "https://github.com/focusflow/focusflow-extension/issues"
  },
  "homepage": "https://github.com/focusflow/focusflow-extension#readme"
}
